<% if (post.title){ %>
  <% if (index){ %>
    <% //首页标题 %>
    <h3 itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h3>
  <% } else { %>
    <% //主要是正文标题 %>
    <h2 class="<%= class_name %>" itemprop="name">
      <%= post.title %>
    </h2>
  <% } %>
<% } %>
